
public class CashRegister {

	private int _initialMoney;
	private int _totalPurchases;
	private String _clientName;
	
	public CashRegister() { //empty constructor
		_initialMoney = 0;
	}
	
	public CashRegister(int initialMoney) { //money in regoister or zero if illegal sum
		if (initialMoney > 0)
			_initialMoney = initialMoney;
		else{
			_initialMoney = 0; // nullify if you have an illegal sum inputted.
			System.out.println("\nThe initial sum that was inputted is illegal. The sum in the cashier is now 0 (zero).\n");
		}
	}
	
	private itemPurchase(String name, int amount, int price){
		int itemPrice = amount*price;
		return itemPrice;
	}
	
	
	
}
