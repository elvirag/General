package trees;

public class Node {
	public static final int BLACK=0, RED=1; //TODO enum?
	
	protected String _key;
	protected int _color;
	Node _left, _right, _parent;
	
	//constructor TODO
	public Node(String key){
		setKey(key);
		//_left = _right = _parent = createNode(); // TODO: if create is not here
		setColor(-1); //let the setter choose the default
	}
	
	//copy constructor TODO
	public Node(Node other){
		if(other!=null)
			setKey(other.getKey());
		else 
			setKey("");
		setColor(-1); //let the setter choose the default
	}
	
	//Getters
	public String getKey(){
		return _key;
	}
	public int getColor(){
		return _color;
	}
	
	//Setters
	public void setKey(String key){
		_key = key;
	}
	
	public void setColor(int color){
		if(color==RED)
			_color = RED;
		else if(color==BLACK)
			_color = BLACK;
		else
			_color = RED; //default color for node
	}
	
	//TODO for testing
	public String toString(){
		return _key;
	}

	
	
}
