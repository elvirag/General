/**
 * {@link CashRegister}
 * This class initialises the register, adds items to bill, charges client and gives change.
 * Also, it can print the items list.
 * */


public class CashRegister {

	private int _initialMoney; // the initial sum of money in register
	private int _bill; // the amount in the client's bill so far
	private int _overAllPurchases; // the amount of all purchases in register.
	private PurchaseItem[] _itemArray; // the Array of all client's items.
	private int _itemNumber; // the counter for items (needed in array progression)

	
	public CashRegister() { //empty constructor
		setInitialMoney(0);
	}
	
	public CashRegister(int initialMoney) { //money in register or zero if illegal sum
		if (initialMoney > 0)
			setInitialMoney(initialMoney);
		else{
			setInitialMoney(0); // nullify if you have an illegal sum inputed.
			System.out.println("\nThe initial sum that was inputted is illegal. The sum in the cashier is now 0 (zero).\n");
		}
	}
	
	public void itemPurchase(String itemName, int amount, int price){
		_itemArray[_itemNumber] = new PurchaseItem(itemName, amount, price);
		_bill+=_itemArray[_itemNumber].getPrice();
		_itemNumber++;
	}
	
	public int payment(int clientPayment){
		
		int change = clientPayment - _bill;
		
		_overAllPurchases += _bill;
		return change;
	}
	
	public int overallSumReturn(){
		return _overAllPurchases;
	}
	
	public PurchaseItem[] arrayItems(){
		return _itemArray;
	}

	public void setInitialMoney(int initialMoney) {
		_initialMoney = initialMoney;
	}
	
	
}
